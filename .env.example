# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_APP_NAME=Comunidad Eduardo Escalante
VITE_APP_VERSION=1.0.0

# Authentication
VITE_JWT_SECRET=your-jwt-secret-here
VITE_SESSION_TIMEOUT=3600

# Database (for backend)
DATABASE_URL=postgresql://username:password@localhost:5432/comunidad_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=comunidad_db
DATABASE_USER=username
DATABASE_PASSWORD=password

# Email Configuration (for backend)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@comunidad-eduardoescalante.com

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# External Services
VITE_ANALYTICS_ID=your-analytics-id
VITE_SENTRY_DSN=your-sentry-dsn

# Development
NODE_ENV=development
VITE_DEBUG=true
